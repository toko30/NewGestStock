<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="IC\ApprovisionnementBundle\Entity\TypeBadge" repository-class="IC\ApprovisionnementBundle\Repository\TypeBadgeRepository" table="type_badge">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="reference" type="string" column="reference" length="100" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="designation" type="text" column="designation" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="frequence" type="integer" column="frequence" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="type" type="integer" column="type" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="idFournisseur" type="integer" column="id_fournisseur" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <one-to-one field="sousTypeBadge" target-entity="SousTypeBadge" >
        <join-column name="type" referenced-column-name="id" />
    </one-to-one>
    <many-to-one field="fournisseur" target-entity="Fournisseur" inversed-by="badge">
        <join-column name="id_fournisseur" referenced-column-name="id"  nullable="false"/>
    </many-to-one>
  </entity>
</doctrine-mapping>
